<%- include("include/header.ejs") %>
      <div class="container-fluid">
        <div class="row">
            <%- include("include/sidebar.ejs") %> 
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-lg-1"></div>
                    <div class="col-lg-10">
                        <div class="row mt-2">
                            <div class="col-lg-12">
                                <div class="alert alert-primary alert-dismissible fade show" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                        <span class="sr-only">Close</span>
                                    </button>
                                    <strong>Alert!</strong> <%= msg %>
                                </div>
                            </div>
                        </div>
                        <form action="/admin/storestudent" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                  <label for="">Name</label>
                                  <input type="text" required
                                    class="form-control" name="name" id="" aria-describedby="helpId" placeholder="">
                                  <small id="helpId" class="form-text text-muted">*</small>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                  <label for="">Email</label>
                                  <input type="email" required
                                    class="form-control" name="email" id="" aria-describedby="helpId" placeholder="">
                                  <small id="helpId" class="form-text text-muted">*</small>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                  <label for="">Phone</label>
                                  <input type="number" required
                                    class="form-control" name="phone" id="" aria-describedby="helpId" placeholder="">
                                  <small id="helpId" class="form-text text-muted">*</small>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                  <label for="">Password</label>
                                  <input type="password" required
                                    class="form-control" name="password" id="" aria-describedby="helpId" placeholder="">
                                  <small id="helpId" class="form-text text-muted">*</small>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="">Gender</label>
                                    <div>
                                    <input type="radio" required
                                      class="form-control-inline" name="gender" id="" aria-describedby="helpId" value="M">M
                                      <input type="radio" required
                                      class="form-control-inline" name="gender" id="" aria-describedby="helpId" value="F">F
                                  </div></div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group">
                                  <label for="">Nationality</label>
                                  <select class="form-control" name="nationality" id="">
                                    <option selected disabled>--select your country--</option>
                                    <option>India</option>
                                    <option>Srilanka</option>
                                    <option>Bangladesh</option>
                                  </select>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                  <label for="">Image</label>
                                  <input type="file" required class="form-control-file" name="image" id="" placeholder="" aria-describedby="fileHelpId">
                                  <small id="fileHelpId" class="form-text text-muted">*</small>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                    </div>
                    <div class="col-lg-1"></div>
                </div>
            </div>
        </div>
      </div>
<%- include("include/footer.ejs") %>    