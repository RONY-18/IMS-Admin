<%- include("include/header.ejs") %>
      <div class="container-fluid">
        <div class="row">
            <%- include("include/sidebar.ejs") %> 
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-lg-1"></div>
                    <div class="col-lg-10">
                        <div class="row mt-2">
                            <h1 class="text-danger">Are You Sure?</h1>
                        </div>
                        <form action="" method="post">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                  <label for="">Name</label>
                                  <input type="text" required value="<%= result[0].name %>"
                                    class="form-control" name="name" id="" aria-describedby="helpId" placeholder="">
                                  <small id="helpId" class="form-text text-muted">*</small>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                  <label for="">Email</label>
                                  <input type="email" required value="<%= result[0].email %>"
                                    class="form-control" name="email" id="" aria-describedby="helpId" placeholder="">
                                  <small id="helpId" class="form-text text-muted">*</small>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                  <label for="">Phone</label>
                                  <input type="number" required value="<%= result[0].phone %>"
                                    class="form-control" name="phone" id="" aria-describedby="helpId" placeholder="">
                                  <small id="helpId" class="form-text text-muted">*</small>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                  <label for="">Password</label>
                                  <input type="password" required value="<%= result[0].password %>"
                                    class="form-control" name="password" id="" aria-describedby="helpId" placeholder="">
                                  <small id="helpId" class="form-text text-muted">*</small>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="">Gender</label>
                                    <div>
                                    <input type="radio" required <%= result[0].gender === 'M' ? 'checked':'' %>
                                      class="form-control-inline" name="gender" id="" aria-describedby="helpId" value="M">M
                                      <input type="radio" required <%= result[0].gender === 'F' ? 'checked':'' %>
                                      class="form-control-inline" name="gender" id="" aria-describedby="helpId" value="F">F
                                  </div></div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group">
                                  <label for="">Nationality</label>
                                  <select class="form-control" name="nationality" id="">
                                    <option selected disabled>--select your country--</option>
                                    <option <%= result[0].nationality === 'India' ? 'selected':'' %>>India</option>
                                    <option <%= result[0].nationality === 'Srilanka' ? 'selected':'' %>>Srilanka</option>
                                    <option <%= result[0].nationality === 'Bangladesh' ? 'selected':'' %>>Bangladesh</option>
                                  </select>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                  <label for="">Image</label>
                                  <input type="file" required class="form-control-file" name="image" id="" placeholder="" aria-describedby="fileHelpId">
                                  <img src="/student/<%= result[0].image %>" class="img-fluid ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|}" alt="" style="height:70px;">
                                  <small id="fileHelpId" class="form-text text-muted">*</small>
                                </div>
                            </div>
                        </div>
                        <a name="" id="" class="btn btn-primary" href="/admin/deletestudent1/<%= result[0].id %>" role="button">Yes</a>
                        <a name="" id="" class="btn btn-primary" href="/admin/allstudent" role="button">No</a>
                    </form>
                    </div>
                    <div class="col-lg-1"></div>
                </div>
            </div>
        </div>
      </div>
<%- include("include/footer.ejs") %>    