<%- include("include/header.ejs") %>
      <div class="container-fluid">
        <div class="row">
            <%- include("include/sidebar.ejs") %> 
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-lg-1"></div>
                    <div class="col-lg-10">
                        <div class="row mt-2">
                            <div class="col-lg-12">
                                <div class="alert alert-primary alert-dismissible fade show" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                        <span class="sr-only">Close</span>
                                    </button>
                                    <strong>Alert!</strong> <%= msg %>
                                </div>
                            </div>
                        </div>
                        <form action="/admin/storeorder" method="post">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                  <label for="">Student Name</label>
                                  <select class="form-control" name="sid" id="">
                                    <% for(var x=0;x< result.length; x++){ %>
                                    <option value="<%= result[x].id %>"><%= result[x].name %></option>
                                    <% } %>
                                  </select>
                                </div>
                            </div>
                            <div class="col-lg-6">
                              <div class="form-group">
                                <label for="">Course Name</label>
                                <select class="form-control" name="cid" id="">
                                  <% for(var x=0;x< result2.length; x++){ %>
                                  <option value="<%= result2[x].id %>"><%= result2[x].name %></option>
                                  <% } %>
                                </select>
                              </div>
                            </div>
                            
                            <div class="col-lg-6">
                                <div class="form-group">
                                  <label for="">Tfee</label>
                                  <input type="number" required value="0" min="0"
                                    class="form-control" name="tfee" id="" aria-describedby="helpId" placeholder="">
                                  <small id="helpId" class="form-text text-muted">*</small>
                                </div>
                            </div>
                            <div class="col-lg-6">
                              <div class="form-group">
                                <label for="">Pfee</label>
                                <input type="number" required value="0" min="0"
                                  class="form-control" name="pfee" id="" aria-describedby="helpId" placeholder="">
                                <small id="helpId" class="form-text text-muted">*</small>
                              </div>
                          </div>
                           
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                    </div>
                    <div class="col-lg-1"></div>
                </div>
            </div>
        </div>
      </div>
<%- include("include/footer.ejs") %>    